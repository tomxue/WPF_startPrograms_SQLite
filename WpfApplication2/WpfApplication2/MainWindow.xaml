<Window x:Class="QQ_Byhh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QQ_Byhh" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListView Name="ProgramList" MinWidth="280" ItemsSource="{Binding Path=mPath}">
            <ListView.View>
                <GridView x:Name="ProgramGrid">
                    <GridViewColumn Header="ProgramPath"  Width="400" DisplayMemberBinding="{Binding Path=Path}"></GridViewColumn>
                    <GridViewColumn Header="Operate" Width="99">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"  Width="75" Height="23" Click="Button_Click" CommandParameter="{Binding Path=Path}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="1" HorizontalAlignment="Right" Name="Add" Margin="0,0,350,0" Click="Add_Click">Add Program</Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" Name="Start" Margin="0,0,62,0" Click="Start_Click">Start Program</Button>
    </Grid>
</Window>